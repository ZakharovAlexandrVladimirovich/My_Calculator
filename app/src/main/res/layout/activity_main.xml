<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/kod_dvoichnyi"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/editTextTextMultiLine"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:autoSizeMaxTextSize="50sp"
        android:autoSizeMinTextSize="15sp"
        android:autoSizeTextType="uniform"
        android:background="@color/white"
        android:ems="10"
        android:gravity="right|center"
        android:inputType="textMultiLine"
        android:maxLines="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="My_calculator" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextMultiLine">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonErase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#E30909"
            android:text="C"
            app:layout_constraintTop_toTopOf="@+id/button16" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonCleaning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#100F0F"
            android:text="del" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonANegativeNumber"
            style="@style/MyButton2"
            android:text="+/_" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonMultiplication"
            style="@style/MyButton2"
            android:text="*" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button7"
            style="@style/MyButtonNumbers"
            android:backgroundTint="#FF5722"
            android:text="7" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button8"
            style="@style/MyButtonNumbers"
            android:text="8" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button9"
            style="@style/MyButtonNumbers"
            android:text="9" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonDivision"
            style="@style/MyButton2"
            android:text="/" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button4"
            style="@style/MyButtonNumbers"
            android:text="4" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button5"
            style="@style/MyButtonNumbers"
            android:text="5" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button6"
            style="@style/MyButtonNumbers"
            android:text="6" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonSubtraction"
            style="@style/MyButton2"
            android:text="-" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button1"
            style="@style/MyButtonNumbers"
            android:text="1" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button2"
            style="@style/MyButtonNumbers"
            android:text="2" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button3"
            style="@style/MyButtonNumbers"
            android:text="@string/button_3_text" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonAddition"
            style="@style/MyButton2"
            android:text="+" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonZero"
            style="@style/MyButtonNumbers"
            android:text="0" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonPoint"
            style="@style/MyButton2"
            android:text="." />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonEqually"
            style="@style/MyButton2"
            android:text="=" />


    </GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>